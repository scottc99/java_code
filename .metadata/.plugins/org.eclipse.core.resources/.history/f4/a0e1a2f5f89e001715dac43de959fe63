        System.out.print(arrList.size()+"\n");
        System.out.print(arrList.capacity+"\n");
        System.out.print(arrList.toString()+"\n");
        arrList.shrink();
        System.out.print(arrList.size()+"\n");
        System.out.print(arrList.capacity+"\n");
        System.out.print(arrList.toString()+"\n");
        arrList.clear();
        System.out.print("\n"+arrList.toString()+"\n");
        System.out.print(arrList.capacity+"\n");

    } // end main() method
  
